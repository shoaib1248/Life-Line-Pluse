<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PatientHome"
    android:background="@drawable/background_3">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/searchblood"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Blood"
            android:textColor="#FFFFFF"
            android:backgroundTint="#344AC5"
            app:cornerRadius="28dp"/>

        <Button
            android:id="@+id/searchorgan"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Organ"
            android:textColor="#FFFFFF"
            android:backgroundTint="#344AC5"
            app:cornerRadius="28dp"/>

        <Button
            android:id="@+id/patientviewmessages"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Messages"
            android:textColor="#FFFFFF"
            android:backgroundTint="#344AC5"
            app:cornerRadius="28dp"/>

        <Button
            android:id="@+id/patientlogout"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#344AC5"
            app:cornerRadius="28dp"/>

    </LinearLayout>

</ScrollView>